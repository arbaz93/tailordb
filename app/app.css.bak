@media print {
  body * {
    visibility: hidden; /* hide everything by default */
  }

  /* Only print sections marked with print-visible */
  .print-visible, .print-visible * {
    visibility: visible;
  }

  .print-visible {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
  }
  
  .print-visible .gray-box {
    -webkit-print-color-adjust: exact; /* Chrome/Safari */
    print-color-adjust: exact;         /* Firefox */
    background-color: hsl( 0 0% 92%) !important;
  }
  .print-visible .gray-box *:not(svg) {
    color: black;
  }
  .print-visible .gray-box .m-icon.fill-clr-200 {
    fill: black !important
  }
  .print-visible .gray-box .m-icon.stroke-clr-200 {
    stroke: black !important
  }
  .print-visible .gray-box .m-icon.text-clr-200 {
    color: black !important
  }

  #section-1 .circle-with-inital {
    -webkit-print-color-adjust: exact; /* Chrome/Safari */
    print-color-adjust: exact;         /* Firefox */
    background-color: black !important;
    color: white;
  }

  .print-visible#section-2{
    position: absolute;
    top: 30%;
    left: 0;
    width: 100%;
  }
  .print-visible#section-3 {
    position: absolute;
    top: 55%;
    left: 0;
    width: 100%;
  }

  /* Optional: hide all buttons */
  button {
    display: none;
  }
} 